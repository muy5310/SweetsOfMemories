<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffe9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/top_text"
        android:text=" 이달의 추억의 과자 TOP3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="7dp"
        android:textColor="#d51d36"
        android:textSize="30dp"
        android:background="#fff29a"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/top_text"
        android:background="#f89b00"/>
<!-- 싱싱 논두렁 -->
    <ImageView
        android:id="@+id/field_img"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_below="@id/top_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/field"/>
    <TextView
        android:id="@+id/field_name"
        android:text="싱싱 논두렁"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/field_img"
        android:layout_below="@id/top_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textColor="#005666"/>
    <TextView
        android:id="@+id/field_price"
        android:text="500원"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/field_img"
        android:layout_below="@id/field_name"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="#ff7f00"/>
    <Button
        android:id="@+id/field_minus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_price"
        android:layout_toRightOf="@id/field_img"
        android:text="ㅡ"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/field_num"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/field_price"
        android:layout_toRightOf="@id/field_minus"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/field_plus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_price"
        android:layout_toRightOf="@id/field_num"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20dp" />
    <CheckBox
        android:id="@+id/field_btn"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@id/field_price"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/field_plus"
        android:background="#fbceb1"
        android:text="선택"
        android:textColor="#800000"
        android:textSize="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/field_img"
        android:background="#ffd700"/>
<!-- 무지개 쫀디기 -->
    <ImageView
        android:id="@+id/stick_img"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_below="@id/field_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/stick"/>
    <TextView
        android:id="@+id/stick_name"
        android:text="무지개 쫀디기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/stick_img"
        android:layout_below="@id/field_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textColor="#005666"/>
    <TextView
        android:id="@+id/stick_price"
        android:text="1500원"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stick_img"
        android:layout_below="@id/stick_name"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="#ff7f00"/>
    <Button
        android:id="@+id/stick_minus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stick_price"
        android:layout_toRightOf="@id/stick_img"
        android:text="ㅡ"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/stick_num"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/stick_price"
        android:layout_toRightOf="@id/stick_minus"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/stick_plus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stick_price"
        android:layout_toRightOf="@id/stick_num"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20dp" />
    <CheckBox
        android:id="@+id/stick_btn"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@id/stick_price"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/stick_plus"
        android:background="#fbceb1"
        android:text="선택"
        android:textColor="#800000"
        android:textSize="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/stick_img"
        android:background="#ffd700"/>
<!-- 추억의 꺼벙이 -->
    <ImageView
        android:id="@+id/kkeobeong_img"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_below="@id/stick_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/kkeobeong"/>
    <TextView
        android:id="@+id/kkeobeong_name"
        android:text="추억의 꺼벙이"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/kkeobeong_img"
        android:layout_below="@id/stick_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textColor="#005666"/>
    <TextView
        android:id="@+id/kkeobeong_price"
        android:text="1300원"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/kkeobeong_img"
        android:layout_below="@id/kkeobeong_name"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="#ff7f00"/>
    <Button
        android:id="@+id/kkeobeong_minus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kkeobeong_price"
        android:layout_toRightOf="@id/kkeobeong_img"
        android:text="ㅡ"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/kkeobeong_num"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/kkeobeong_price"
        android:layout_toRightOf="@id/kkeobeong_minus"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/kkeobeong_plus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kkeobeong_price"
        android:layout_toRightOf="@id/kkeobeong_num"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20dp" />
    <CheckBox
        android:id="@+id/kkeobeong_btn"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@id/kkeobeong_price"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/kkeobeong_plus"
        android:background="#fbceb1"
        android:text="선택"
        android:textColor="#800000"
        android:textSize="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/kkeobeong_img"
        android:background="#ffd700"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kkeobeong_img"
        android:padding="10dp"
        android:text=" 구매하실 상품을 선택해 주세요."
        android:textSize="20dp"
        android:textColor="#ffee76"
        android:background="#000000"/>
    <Button
        android:id="@+id/basket_btn"
        android:text="장바구니"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginLeft="3dp"
        android:background="#fff6bc"/>
    <Button
        android:id="@+id/purchase_btn"
        android:text="바로 구매"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_toRightOf="@+id/basket_btn"
        android:layout_marginLeft="7dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:background="#f89b00"/>
</RelativeLayout>